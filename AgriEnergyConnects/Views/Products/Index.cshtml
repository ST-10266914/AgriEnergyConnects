@model IEnumerable<AgriEnergyConnects.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<style>
    body {
        background-color: darkslategray;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary, "style="color:white"><i class="bi bi-boxes"></i> Product List</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Create New Product
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-primary">
                <tr class="text-center align-middle">
                    <th style="background-color:mediumseagreen">@Html.DisplayNameFor(model => model.Name)</th>
                    <th style="background-color:mediumseagreen">@Html.DisplayNameFor(model => model.Category)</th>
                    <th style="background-color:mediumseagreen">@Html.DisplayNameFor(model => model.ProductionDate)</th>
                    <th style="background-color:mediumseagreen">@Html.DisplayNameFor(model => model.Farmer)</th>
                    <th style="background-color:mediumseagreen">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.ProductionDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.Farmer?.Email</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1" title="View Details">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No products available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
