@model AgriEnergyConnects.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<style>
    body {
        background-color: darkslategray;
    }

</style>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="bi bi-plus-circle-fill"></i> Add a New Product</h3>
        </div>
        <div class="card-body">
            <partial name="_ValidationScriptsPartial" />

            <form asp-action="Create" method="post" novalidate>
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Product Name</label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., Solar Irrigation Kit" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label fw-bold">Category</label>
                    <input asp-for="Category" class="form-control" placeholder="e.g., Renewable Energy, Equipment" />
                    <span asp-validation-for="Category" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductionDate" class="form-label fw-bold">Production Date</label>
                    <input asp-for="ProductionDate" class="form-control" type="date" />
                    <span asp-validation-for="ProductionDate" class="text-danger small"></span>
                </div>

                <input type="hidden" asp-for="FarmerId" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save-fill"></i> Save Product
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
