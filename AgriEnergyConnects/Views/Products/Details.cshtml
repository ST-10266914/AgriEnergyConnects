@model AgriEnergyConnects.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow-sm border-primary">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle-fill"></i> Product Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Product Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-bold">Category:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-3 fw-bold">Production Date:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductionDate)</dd>

                <dt class="col-sm-3 fw-bold">Farmer Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Farmer.Email)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Edit Product
            </a>
        </div>
    </div>
</div>
